doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Start pomodoro
    body
        header 
            a(href="/") 
                <svg width="29" height="32" viewBox="0 0 29 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 16L28.6875 0.411545L28.6875 31.5885L0 16Z" fill="#0087B1"/>
                </svg>
        .boton_inicio
            #boton Start!
    style.
        *{
            margin: 0px;
            padding: 0px;
            color: #ffffff;
            font-family: Arial, Helvetica, sans-serif;
        }
        header{
            padding: 1vw;
        }
        header a{
            outline: none;   
        }
        body{
            background-color: #373A40;
        }
        .boton_inicio{
            width: 100vw;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 90vh;
        }
        .boton_inicio #boton{
            width: 190px;
            height: 190px;
            border-radius: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 40px;
            font-weight: 600;
            font-family: Arial, Helvetica, sans-serif;
            color: whitesmoke;
            cursor: pointer;
            box-shadow: 0px 0px 18px 2px #00c3ff2d;
            border: 8px solid #00C2FF;
            background-color: #00C2FF;
            transition-duration: 600ms;
            outline: none;
            user-select: none;
        }
        .boton_inicio #boton:hover{
            background: radial-gradient(50% 50% at 50% 50%, #46d2fd7e 0%, #0094c57e 100%);
            box-shadow: 0px 0px 18px 2px #00c3ff6c;
        }
        .tit{
            padding: 30px 20px;
        }
        .descrip{
            display: flex;
            justify-content: center;
        }
        .descrip p{
            width: 80%;
            font-size: 18px;
            font-weight: 200;
            text-align: center;
        }
        .clock{
            padding: 90px 0px;
            display: grid;
            justify-content: center;
        }
        .clock div{
            display: flex;
        }
        @media screen and (max-width: 768px){
            .boton_inicio #boton{
                cursor: default;
            }
        }
    script.
        const boton = document.getElementById('boton')

        const start = ()=>{
            boton.innerHTML === '25:00'? boton.innerHTML = 'Start': boton.innerHTML = '25:00'
        }

        boton.addEventListener('click', ()=> start())